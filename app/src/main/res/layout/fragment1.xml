<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment1">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notre_application"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:paddingTop="120dp"
        android:paddingBottom="30dp"
        android:paddingLeft="120dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Décrit les villes en détaillant leur attraction, point d'intérêt et caractéristiques culturelles avec des cartes interactives pour une exploration facile."
        />
</LinearLayout>